<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.owasp.seraphimdroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.owasp.seraphimdroid.MainScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ussd.USSDUriInterceptor"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tel" />
            </intent-filter>
        </activity>
        <activity android:name=".outgoingcalls.OutgoingCallLogActivity" />
        <activity android:name=".activitylog.ActivityLog" />
        <activity
            android:name=".PermissionScanner"
            android:label="@string/permission_scanner_title" />
        
        <activity android:name=".PermissionDescription"
            android:label="@string/permission_description_title"/>

        <receiver
            android:name="org.owasp.seraphimdroid.SMSReciever"
            android:exported="true" >
            <intent-filter android:priority="999" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" >
                </action>
            </intent-filter>
        </receiver>
        <receiver
            android:name=".ussd.USSDDialInterceptor"
            android:exported="true" >
            <intent-filter>
                <action
                    android:name="android.intent.action.NEW_OUTGOING_CALL"
                    android:priority="0" />
            </intent-filter>
        </receiver>
        <receiver android:name=".outgoingcalls.OutgoingCallInterceptor" >
            <intent-filter android:priority="0" >
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>
    </application>

</manifest>