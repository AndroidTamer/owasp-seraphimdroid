<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.owasp.seraphimdroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity android:name="org.owasp.seraphimdroid.PasswordActivity" 
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.owasp.seraphimdroid.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.owasp.seraphimdroid.PermissionDescription"
            android:label="@string/app_name" >
        </activity>

        <!-- Service Declaration -->
        <service android:name="org.owasp.seraphimdroid.services.AppLockService" >
        </service>

        <!-- Receiver Declaration -->

        <receiver android:name="org.owasp.seraphimdroid.receiver.CallRecepter" >
            <intent-filter>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>
    </application>

</manifest>